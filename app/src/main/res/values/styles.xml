<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="label_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="label_form" parent="label_default">
        <item name="android:textColor">#FFF</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="input_form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="minHeight">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:background">@drawable/custom_edittext</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="container_form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="container_form_start" parent="container_form">
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="container_form_end" parent="container_form">
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="button" parent="label_default">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">#1491A7</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="FullScreen" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>